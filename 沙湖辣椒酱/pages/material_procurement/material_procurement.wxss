.container {
  width: 89.3%;
   height: 70rpx; 
  display: flex;
  margin: auto;
  line-height: 70rpx;
  font-family: PingFang-SC-Bold;
  font-size: 14px;
  color: #04a1e7;
  letter-spacing: -0.1px;
  text-align: center;
  justify-content: space-between;
  border-bottom: 1px solid #4a4a4a;
  padding: 0 20rpx;
  box-sizing: border-box;
  overflow:hidden;
text-overflow:ellipsis;
white-space:nowrap; 
}
.content{
  width: 360rpx;
  /* border: 1px solid red; */
  text-align: left
}
.drop_down {
  width: 100%;
  position: absolute;
  height: 100%;
  text-align: center;
  background-color: white;
  overflow: auto;
  z-index: 100;
}

.drop_down .search_content {
  height: 66rpx;
  line-height: 66rpx;
}

.drop_down view view {
  font-size: 14px;
  text-align: left;
  border-bottom: 1px dashed grey;
  width: 90%;
  margin: auto;
}
.search_content>view{
  padding-left: 30rpx;
  box-sizing: border-box
}


.container>view{
  /* color: red; */
  display: flex;
   flex-direction: row;
}
.container>view>view{
  color: red
}
.input {
  width: 100%;
  height: 70rpx;
   /* border: 1px solid green;  */
  font-family: PingFang-SC-Regular;
  font-size: 14px;
  color: #c4c4c4;
  letter-spacing: -0.1px;
}

.guodu {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  background: #04a1e7;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  padding-left: 60rpx;
  box-sizing: border-box;
  font-family: PingFang-SC-Bold;
  font-size: 14px;
  color: #fff;
  letter-spacing: -0.1px;
}

.btn {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.jinchang {
  display: flex;
  padding-left: 100rpx;
  box-sizing: border-box;
  flex-direction: row;
}

.row {
  display: flex;
  flex-direction: row;
}

.button {
  width: 89.3%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 30rpx auto;
  background: #04a1e7;
  border-radius: 4px;
  font-family: PingFang-SC-Bold;
  font-size: 18px;
  color: #fff;
  letter-spacing: -0.1px;
  text-align: center;
}
.picker{
  width: 100%;
  height: 60rpx;
   /* border: 1px solid green;  */
}
