
<loading hidden="{{hiddenLoading}}">正在加载</loading>
<form class="form" bindsubmit="formSubmit" report-submit="true">

  <view class='container'>
    <view>
      <view>*</view>加工商品名称
    </view>
    <view class='content'>
      <view>
        <input placeholder='请选择加工商品名称' class='input' value='{{goodsName}}' bindinput="bindKeyInput" bindfocus='Varieties_feeding' placeholder-class="input" /> </view>
    </view>
  </view>
  <!-- 投料品种 -->

  <view class='drop_down' hidden='{{array_goods_status}}'>
    <scroll-view scroll-y bindscrolltolower='loadPaageMore' data-page-name='goods' style="height: {{height}}px" wx:if='{{array_goods.length}}'>
      <view wx:for='{{array_goods}}' class='search_content'>
        <view bindtap='bingId' data-id='{{item}}'>{{item.goods_name}}</view>
        <input hidden='true' name="array_goods" value='{{goodsId}}'></input>
      </view>
    </scroll-view>
    <scroll-view scroll-y style="height: {{height}}px" wx:if='{{!array_goods.length && init}}'>
      <view style='font-size:31rpx;margin-top:10rpx;'>
        暂未找到该商品！
      </view>
    </scroll-view>
  </view>

  <view class='container'>
    <view>
      <view>*</view>加工原料批次号</view>
    <view class='content'>
      <input placeholder='请选择加工原料批次号' class='input' value='{{supplierName}}' bindinput="bindKeyInput3" bindfocus='supplier_name' placeholder-class="input" />
    </view>
  </view>

  <view class='drop_down' hidden='{{supplier_name}}'>
    <scroll-view scroll-y bindscrolltolower='loadPaageMore' data-page-name='goods' style="height: {{height}}px" wx:if='{{supplier.length}}'>
      <view wx:for='{{supplier}}' class='search_content'>
        <view bindtap='bingId3' data-id='{{item}}'>{{item.purchase_batch}}</view>
        <input hidden='true' value='{{supplierId}}'></input>
      </view>
    </scroll-view>
    <scroll-view scroll-y style="height: {{height}}px" wx:if='{{!supplier.length && init}}'>
      <view style='font-size:31rpx;margin-top:10rpx;'>
        暂未找到该商品！
      </view>
    </scroll-view>
  </view>
  <view class='container'>
    <view>
      <view>*</view>生产日期</view>
    <view class='content'>
      <picker mode="date" value="{{date}}" start="2018-01-01" bindchange="bindDateChange2">
        <!-- <view class='goods' hidden='{{hidden}}' style='color:#9b9b9b'>请务必选择商品名称</view> -->
        <view class="picker" style='color:#9b9b9b'>
          {{date}}
        </view>
      </picker>
    </view>
  </view>

  <view class='container'>
    <view>
      <view>*</view>生产数量</view>
    <view class='content'>
      <input placeholder='请输入投入数量' class='input' type='number' name="amount" placeholder-class="input" />
    </view>
  </view>


  <view class='container' hidden='{{user}}'>
    <view>
      <view>*</view>质检员 </view>
    <view class='content'>
      <input placeholder='请选择质检员' class='input' value='{{principalsName}}' bindinput="bindKeyInput4" bindfocus='principals_name' placeholder-class="input" />
    </view>
  </view>
  <view class='drop_down' hidden='{{principal_name}}'>
    <scroll-view scroll-y bindscrolltolower='loadPaageMore' data-page-name='principals' style="height: {{height}}px" wx:if='{{principals.length}}'>
      <view wx:for='{{principals}}' class='search_content'>
 
        <view bindtap='bingId4' data-id='{{item}}'>{{item.name}}</view>
        <input hidden='true' name="array_goods" value='{{principalId}}'></input>
      </view>
    </scroll-view>
    <scroll-view scroll-y style="height: {{height}}px" wx:if='{{!principals.length && init}}'>
      <view style='font-size:31rpx;margin-top:10rpx;'>
        暂未找到质检员！
      </view>
    </scroll-view>
  </view>


  <view class='container' hidden='{{user}}'>
    <view>
      <view>*</view>负责人 </view>
    <view class='content'>
      <input placeholder='请选择负责人' class='input' value='{{feederName}}' bindinput="bindKeyInput2" bindfocus='feeder_name' placeholder-class="input" />
    </view>
  </view>
  <view class='drop_down' hidden='{{feeder_name}}'>
    <scroll-view scroll-y bindscrolltolower='loadPaageMore' data-page-name='feeder' style="height: {{height}}px" wx:if='{{feeder.length}}'>
      <view wx:for='{{feeder}}' class='search_content'>
        <view bindtap='bingId2' data-id='{{item}}'>{{item.name}}</view>
        <input hidden='true' name="array_goods" value='{{feederId}}'></input>
      </view>
    </scroll-view>
    <scroll-view scroll-y style="height: {{height}}px" wx:if='{{!feeder.length && init}}'>
      <view style='font-size:31rpx;margin-top:10rpx;'>
        暂未找到负责人！
      </view>
    </scroll-view>
  </view>


  <button class="button" formType="submit">
    立即创建
  </button>
</form>